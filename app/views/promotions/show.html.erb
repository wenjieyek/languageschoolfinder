<% @page_title="Promotion Details" %>



<div class="form-card"> <!-- margin top 5% -->
<div class="row">

<%= render(:partial=>'layouts/school_navigation') %>

<div class="col s12 m9 l9">
<!-- Teal page content  -->
<div class="card">
	<div class="card-content">

	<h5>Promotion Details </h5>


			
		
			
			<p>Promotion Name: <%= @promotion.name %></p>

			

			<p>Details: <%= @promotion.details %></p>

			<p>Period: <%= @promotion.period %></p>

			

			<p>Attachment: <%= link_to 'Download',@promotion.attachments_url %></p>

			

			
			


		


	</div>

	<div class="card-action">

		<%= link_to("Delete", delete_promotion_path(@promotion.id),:class=>"waves-effect waves-light btn red darken-4") %>
		
		<%= link_to("Edit", edit_promotion_path(@promotion.id),:class=>"waves-effect waves-light btn grey darken-4") %>
		
	</div>
	
</div>
</div>

</div>

</div>










