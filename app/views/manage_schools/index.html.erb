<% @page_title="School List" %>

<%= render(:partial=>'layouts/admin_navigation') %>


<div class="col s12 m9 l9">
<!-- Teal page content  -->
<div class="card">
<div class="card-content">
<h5>Schools List </h5>




	<%= grid(@manage_schools, show_filters: :when_filtered) do |g| 


			g.column name: 'School Name' , attribute: 'name' do |school|
			school.name
			end

			g.column name: 'Email'  , attribute: 'email' do |school|
			school.email
			end

			g.column name: 'Action' do |school|
			link_to("Show", manage_school_path(school.id))
			end

end -%>


		


	</div>

	
	
</div>
</div>

</div>

</div>













