<% @page_title="School Details" %>


   <div class="parallax-container">

   <div class="container">
   <div class="center" >

   <br>
   <br>
   <br>
   <br>

   <img class="circle z-depth-4" style="height: 200px; " src=<%= @school_user.profilepicture %> >

      <h4 style="color:white;"><%= @school_user.name %> </h4>
     

   </div>

   


    <div class="parallax"><img src="https://www.davidjhay.com/wp-content/uploads/2016/06/old-man-reading-book.jpg">



    </div>

    </div>
  </div>




<div class="container">



<div class="card">
<div class="card-content">

<label>Description: </label>
<p><%= @school_user.description %> </p>

<label>Email: </label>
<p><%=@school_user.email %></p>

<label>Phonenumber: </label>
<p><%=@school_user.phonenumber %></p>

<label>Website: </label>
<p><%=@school_user.website %></p>

<label>Address: </label>
<p><%=@school_user.address %></p>

<label>Transportation Area: </label>            
<p><%=@school_user.transportation %></p>

</div>


  





        
<div class="tabs">
<ul class="tabs tabs-fixed-width " >
        <li class="tab"><a href="#newsfeed">Newsfeed</a></li>
        <li class="tab"><a href="#picturesandvideos">Pictures and Videos</a></li>
        <li class="tab"><a href="#courses">Courses</a></li>
        <li class="tab"><a href="#teachers">Teachers</a></li>
        <li class="tab"><a href="#promotions">Promotions</a></li>
        <li class="tab"><a href="#certificates">Certificates</a></li>
        <li class="tab"><a href="#inquiry">Inquiry</a></li>
</ul>
</div>

<div class="card-content">
  



    
      <div id="newsfeed">

      <% @newsfeeds.each do |newsfeeds| %>

      <ul class="collapsible" data-collapsible="accordion">
      <li>
      <div class="collapsible-header"><i class="material-icons teal-text text-lighten-2" >label</i><%= newsfeeds.title %></div>

      <div class="collapsible-body">
      <label>News: </label>
     
      <p><%= newsfeeds.details %></p>



      </div>
      </li>
    
      </ul>


    
      

    

    <% end %>


      </div>

     
      <div id="picturesandvideos">
      </div>

      <div id="courses">

      <% @courses.each do |courses| %>

      <ul class="collapsible" data-collapsible="accordion">
      <li>
      <div class="collapsible-header"><i class="material-icons teal-text text-lighten-2">book</i><%= courses.name %></div>

      <div class="collapsible-body">

      <label>Language: </label>
      <p><%= courses.languagetype %></p>

      <label>Details: </label>
      <p><%= courses.details %></p>

      <label>Price: </label>
      <p><%= courses.price %></p>

      <label>Attachments: </label>
      <p><a href=<%= courses.attachments %>>View</a></p>
      

      <label>Time: </label>
      <p><%= courses.time %></p>



      </div>
      </li>
    
      </ul>


    
      

    

    <% end %>

      </div>

      <div id="teachers">

      <% @teachers.each do |teachers| %>

      <ul class="collapsible" data-collapsible="accordion">
      <li>
      <div class="collapsible-header"><i class="material-icons teal-text text-lighten-2">book</i><%=teachers.name %></div>

      <div class="collapsible-body">

      <div class="center">
        <p><img class="circle responsive-img center"  style="height:200px" src=<%=teachers.profilepicture %>></p>
        
      </div>

       

     <label>Details: </label>
              <p><%=teachers.details %></p>

              <label>Language: </label>
              <p><%=teachers.languagetype %></p>

              <label>Resume: </label>

               <p><a href=<%=teachers.resumes %>>Download</a></p>


      </div>
      </li>
    
      </ul>



        <% end %>
             
             
            </div>

       



     

      <div id="promotions">


      <% @promotions.each do |promotions| %>

      <ul class="collapsible" data-collapsible="accordion">
      <li>
      <div class="collapsible-header"><i class="material-icons teal-text text-lighten-2">grade</i><%= promotions.name %>
      </div>

      <div class="collapsible-body">

      <label>Details: </label>
      <p><%= promotions.details %></p>

      <label>Period: </label>
      <p><%= promotions.period %></p>

      <label>Attachment: </label>
      <p><a href=<%= promotions.attachments %>></a> </p>



      </div>
      </li>
    
      </ul>
       <% end %>
    

   

      </div>

      <div id="certificates">


      <% @certificates.each do |certificates| %>
      <ul class="collapsible" data-collapsible="accordion">
      <li>
      <div class="collapsible-header"><i class="material-icons teal-text text-lighten-2">bookmark_border</i><%= certificates.title %></div>

      <div class="collapsible-body">
      <label>Details: </label>
      <p><%= certificates.details %></p>
      <label>Attachment: </label>
      <p><img src=<%= certificates.attachment %> class="responsive-img" style="height:300px;"></p>
     </div>

      </li>
    
      </ul>

    <% end %>

      </div>





      <div id="inquiry">

      </div>
   

    </div>




</div>

</div>






