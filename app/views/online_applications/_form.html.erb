<%= error_messages_for(f.object) %>


<div class="row">
<div class="input-field col s12 m6">

<%=f.text_field(:course,:value=>@onlineapplication.course)%>

    <label>Course</label>
    
    
</div>

<div class="input-field col s12 m6">

<%=f.text_field(:intakedate,:type=>"date",:class=>"datepicker")%>

    <%=f.label("Intake Date")%>
    

    
    
</div>
</div>



<div class="row">
<div class="input-field col s12 m6">
    

    <%=f.text_field(:name)%>

    <label>Name</label>
    
</div>


<div class="input-field col s12 m6">
    

    <%=f.text_field(:phonenumber)%>

    <label>Phone Number</label>
    
</div>




</div>

<div class="row">

<div class="input-field col s12 m6">
    

    <%=f.text_field(:email)%>

    <label>E-Mail</label>
    
</div>
  

  <div class="input-field col s12 m6">
    

    <%=f.text_field(:ic)%>

    <label>IC/Passport</label>
    
</div>

</div>

<div class="row">
<div class="input-field col s12 m6">
    

    <%=f.select(:gender, options_for_select([["Male"],["Female"]]))%>

    <label>Gender</label>
    
</div>

<div class="input-field col s12 m6">
    

    <%=f.text_field(:age) %>

    <label>Age</label>
    
</div>
</div>




<div class="row">
<div class="input-field col s12">
    

    <%=f.select(:nationality, options_for_select([["Malaysia"],["Other"]]))%>

    <label>Nationality</label>
    
</div>
</div>



<div class="row">
<div class="input-field col s12">
    <%=f.label("Address")%>
    <%=f.text_area(:address,:area=>'40x10',:class=>"materialize-textarea")%>
</div>
</div>




<div class="row">
<div class="file-field input-field s12" >
<div class="waves-effect waves-light btn teal lighten-2">
      <span>Upload Picture</span>
      <%=f.file_field(:profilepicture)%>
</div>
<div class="file-path-wrapper">
      <input class="file-path validater" type="text" placeholder="Upload Course's Attachment" disabled>
</div>
</div>
</div>










