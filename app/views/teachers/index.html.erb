<% @page_title="Teachers List" %>

<%= render(:partial=>'layouts/school_navigation') %>


<div class="col s12 m9 l9">
<!-- Teal page content  -->
<div class="card">
<div class="card-content">

<div class="center"><span class="card-title">Teachers List</span></div>
<p><%=link_to("Add Teacher",new_teacher_path) %></p>


			<%= grid(@teachers, show_filters: :when_filtered) do |g| 

			
			g.column name: 'Name' , attribute: "name"  do |teacher|
			teacher.name
			end

			g.column name: 'Language'  , attribute: 'languagetype' do |teacher|
			teacher.languagetype
			end 

			g.column name: 'Action' do |teacher|
			link_to("Show",teacher_path(teacher.id))+"<td>".html_safe+link_to("Edit", edit_teacher_path(teacher.id))+"</td>".html_safe+"<td>".html_safe+ link_to("Delete", delete_teacher_path(teacher.id))+"</td>".html_safe
			end

end -%>


		


	</div>

	
	
</div>
</div>

