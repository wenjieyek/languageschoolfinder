<% @page_title="Teacher Details" %>



<div class="form-card"> <!-- margin top 5% -->
<div class="row">

<%= render(:partial=>'layouts/school_navigation') %>

<div class="col s12 m9 l9">
<!-- Teal page content  -->
<div class="card">
	<div class="card-content">

	<h5>Teacher Details </h5>


	<label>Picture:</label>


			

			<p><img class="responsive-img" style="height:200px;" src=<%= @teacher.profilepicture %> ></p>
		
			
			<label>Course Name: </label>
			<p><%= @teacher.name %></p>

			<label>Language: </label>

			<p><%= @teacher.languagetype %></p>

			<label>Details: </label>

			<p><%= @teacher.details %></p>

			<label>Resume: </label>

			<p><%= link_to 'Download',@teacher.resumes_url %></p>

			

			
			


		


	

	<div class="center">

		<%= link_to("Delete", delete_teacher_path(@teacher.id),:class=>"waves-effect waves-light btn red darken-4") %>
		
		<%= link_to("Edit", edit_teacher_path(@teacher.id),:class=>"waves-effect waves-light btn teal lighten-2") %>
		
	</div>

	</div>
	
</div>
</div>

</div>

</div>










