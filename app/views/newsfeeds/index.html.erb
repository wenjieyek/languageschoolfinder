<% @page_title="Newsfeed List" %>

<%= render(:partial=>'layouts/school_navigation') %>


<div class="col s12 m9 l9">
<!-- Teal page content  -->
<div class="card">
<div class="card-content">

<div class="center"><span class="card-title">Newsfeeds List</span></div>
<p><%=link_to("Add Newsfeed",new_newsfeed_path) %></p>

	

		<%= grid(@newsfeeds, show_filters: :when_filtered) do |g| 

			
			g.column name: 'title' , attribute: 'title'  do |newsfeed|
			newsfeed.title
			end

			g.column name: 'Uploaded Date'  , attribute: 'created_at' do |newsfeed|
			newsfeed.created_at
			end 

			g.column name: 'Action' do |newsfeed|
			link_to("Show",newsfeed_path(newsfeed.id))+"<td>".html_safe+link_to("Edit", edit_newsfeed_path(newsfeed.id))+"</td>".html_safe+"<td>".html_safe+ link_to("Delete", delete_newsfeed_path(newsfeed.id))+"</td>".html_safe
			end

end -%>


		


	</div>

	
	
</div>
</div>

</div>

</div>













