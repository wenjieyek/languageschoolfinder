<% @page_title="School Edit Profile" %>



<div class="form-card">

<div class="form-card"> <!-- margin top 5% -->
<div class="row">
<div class="col s12 m3 l3"><!-- Grey navigation panel -->


<div class="card ">
<div class="card-image ">
		<%=image_tag(@school_user.profilepicture.url())%>
		
		
</div>


<div class="card-content">
		<p>Logged in as: <%=session[:schools_name] %></p>
	
</div>


<div class="card-action black-text">
	<ul>
		<li><%=link_to("Edit Data",edit_school_user_path(session[:schools_id])) %></li>
		<li><%=link_to("Manage Courses",courses_path) %></li>
		<li><%=link_to("Manage Teachers") %></li>
		<li><%=link_to("Manage Promotions") %></li>
		<li><%=link_to("Manage Applications") %></li>
		<li><%=link_to("Manage Inquiry") %></li>
	</ul>

    	<div class="center-align">
    	<%=link_to("Logout",access_logout_path, :class=>"waves-effect waves-light btn red darken-4") %> 
    	</div> 
</div>

</div>

</div>



<div class="col s12 m9 l9">

<div class="card center-align white z-depth-4" >
<span class="card-title">Register Your School</span>

<div class="card-content">
	<%=form_for(@school_user,:class=>"col s12") do |f| %>
	<%= render(:partial=>'form', :locals=>{:f=>f}) %>
</div>	


<div class="card-action">
   	<%= f.submit("Update Profile",:class=>"waves-effect waves-light btn grey darken-4") %>
</div>
	<% end %>
</div><!-- card center-align white -->    
</div><!-- form-card -->


</div>





