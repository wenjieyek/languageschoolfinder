
<%= error_messages_for(f.object) %>


<div class="row">

  <div class="input-field col s12 m6">
    <%=f.text_field(:name,:class=>'validate')%>
    <label for="schoolname">School's Name</label>
  </div>

  <div class="input-field col s12 m6">
    <%=f.text_field(:phonenumber,:class=>'validate')%>
    <label for="phonenumber">Phone Number</label>
  </div>
</div>


<div class="row">

  <div class="input-field col s12 m6">
    <%=f.password_field(:password,:class=>'validate')%>
    <label for="password1">Password</label>
  </div>


  <div class="input-field col s12 m6">
    <%=f.password_field(:password,:class=>'validate')%>
    <label for="password2">Repeat Your Password</label>
  </div>
</div>


<div class="row">

  <div class="input-field col s12 m6">
    <%=f.text_field(:email,:class=>'validate')%>
    <label for="email">E-Mail</label>
  </div>


  <div class="input-field col s12 m6">
    <%=f.text_field(:website,:class=>'validate')%>
    <label for="website">Website</label>
  </div>
</div>


<div class="row">

  <div class="input-field col s12">

    <%=f.text_area(:address,:area=>'40x10',:class=>"materialize-textarea")%>

    <label for="address">Address</label>
  </div>



</div>

<div class="row">

  <div class="input-field col s12">

    <%=f.text_area(:description,:area=>'40x10',:class=>"materialize-textarea")%>

    <label for="address">Description</label>
  </div>



</div>



<div class="row">

  <div class="input-field col s12">
    <%=f.text_area(:transportation,:area=>'40x10',:class=>"materialize-textarea")%>
    <label for="transportation">Transportation</label>
  </div>



</div>


<div class="row">

  <div class="file-field input-field s12" >
    <div class="waves-effect waves-light btn grey darken-4">
      <span>Upload School Picture</span>
      <input type="file" >
    </div>
    <div class="file-path-wrapper">
      <input class="file-path validater" type="text" placeholder="Upload School's Picture">
    </div>
  </div>



</div>










