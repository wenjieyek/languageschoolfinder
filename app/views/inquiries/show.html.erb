<% @page_title="Inquiry Details" %>



<div class="form-card"> <!-- margin top 5% -->
<div class="row">

<%= render(:partial=>'layouts/school_navigation') %>

<div class="col s12 m9 l9">
<!-- Teal page content  -->
<div class="card">
	<div class="card-content">

	<h5>Inquiry Details </h5>

	<label>Inquiry Name: </label>
		
			
			<p><%= @inquiry.name %></p>

			<label>Email: </label>

			<p><%= @inquiry.email %></p>

			<label>Course: </label>

			<p><%= @inquiry.course %></p>

			<label>Title: </label>

			<p><%= @inquiry.title %></p>

			<label>Details: </label>
			<p><%= @inquiry.details %></p>

			<label>Status</label>
			<p><%= if @inquiry.status==1
					"<span style='color:green'>".html_safe + "Reviewed" + "</span>".html_safe 
				else

					"<span style='color:red'>".html_safe + "Haven't Reviewed Yet" + "</span>".html_safe 
				end
			
			 %></p>

			
			<br>
			<br>

	

	<%= form_tag(inquiries_reply_path(:id=>@inquiry.id)) do %>
			  
			  
			  <p>
			  <label>Reply Inquiry:</label>
			  <%= text_field_tag(:message) %>
			  </p>
			  

			  


			
		
			


	

	<div class="center">

		<%= submit_tag("Reply",:class=>"waves-effect waves-light btn teal lighten-2") %>
			<% end %>
		
	</div>


	</div>
	
</div>
</div>

</div>

</div>










